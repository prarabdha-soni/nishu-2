{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConversationalFineTuningSchema",
  "type": "object",
  "required": ["id", "messages"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the conversation/sample"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional metadata such as job role, difficulty, tags, source"
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant", "interviewer", "candidate"],
            "description": "Speaker role"
          },
          "content": {
            "type": "string",
            "minLength": 1,
            "description": "Utterance text"
          }
        }
      },
      "description": "Ordered list of messages in the conversation"
    }
  },
  "additionalProperties": false
} 